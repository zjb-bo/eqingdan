<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layout_subview_recycleview_loadfooter"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="5dp">
    <ProgressBar
        android:id="@id/progressbar_subview_recycleview_loadfooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"/>
    <TextView
        android:id="@id/textview_subview_recycleview_loadfooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#99999999"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/noMoreData"/>
</RelativeLayout>